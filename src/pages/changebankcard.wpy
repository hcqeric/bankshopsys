          <i>*</i><text>银行支行名称</text>
        </view>
        <view class="change-info-input">
          <input @tap="openBranchBankPicker" type="text" placeholder="请选择银行支行名称" disabled="true" value="{{branchBankName}}"/>
        </view>
      </view>
      <view class="change-info-item">
