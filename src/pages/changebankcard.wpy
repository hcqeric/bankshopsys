          <input  @tap="openAddressPicker" type="text" placeholder="请选择银行地区" disabled="true" value="{{fullArea}}" />
          <image src="../images/arrow-down.png"></image>
          <areaPicker @areaArray.user="areaPickerArray"></areaPicker>
